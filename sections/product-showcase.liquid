{%- comment -%}
Product Showcase Section for POD Store
{%- endcomment -%}
<section class="product-showcase" style="padding:3rem 1rem; background:#f9fafb;">
  <h2 style="text-align:center; font-size:2rem; margin-bottom:2rem;">Product Showcase</h2>
  <div style="display:grid; grid-template-columns:repeat(auto-fit,minmax(220px,1fr)); gap:2rem; max-width:1200px; margin:0 auto;">
    {% for block in section.blocks %}
      {% assign product = all_products[block.settings.product] %}
      {% if product %}
        <a href="{{ product.url }}" style="display:block; border-radius:0.5rem; overflow:hidden; box-shadow:0 2px 8px #0001; background:#fff; text-align:center; padding:1rem;">
          <img src="{{ product.featured_image | img_url: '400x' }}" alt="{{ product.title }}" style="width:100%; height:220px; object-fit:cover; margin-bottom:1rem;" width="400" height="220" />
          <h3 style="font-size:1.1rem; margin-bottom:0.5rem;">{{ product.title }}</h3>
          <span style="color:#111827; font-weight:bold;">{{ product.price | money }}</span>
        </a>
      {% endif %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Product Showcase",
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        { "type": "product", "id": "product", "label": "Product" }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [ { "name": "Product Showcase" } ]
}
{% endschema %} 