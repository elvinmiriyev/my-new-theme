{%- comment -%}
Hero Section
PRD Features:
- Impactful hero section (image/video), clear headline, prominent CTAs
{%- endcomment -%}

<section class="hero-section" style="text-align:center; padding: 3rem 1rem; background: #f9fafb;">
  {% if section.settings.image != blank %}
    <img src="{{ section.settings.image | img_url: '1200x' }}" alt="Hero Image" style="max-width:100%; height:auto; margin-bottom:2rem;" width="1200" height="600" />
  {% endif %}
  <h1 style="font-size:2.5rem; margin-bottom:1rem;">{{ section.settings.headline }}</h1>
  <p style="font-size:1.25rem; margin-bottom:2rem; color:#555;">{{ section.settings.subheading }}</p>
  {% if section.settings.cta_link != blank and section.settings.cta_label != blank %}
    <a href="{{ section.settings.cta_link }}" class="hero-cta" style="display:inline-block; padding:1rem 2rem; background:#111827; color:#fff; border-radius:0.5rem; text-decoration:none; font-weight:bold;">{{ section.settings.cta_label }}</a>
  {% endif %}
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    { "type": "text", "id": "headline", "label": "Headline", "default": "Welcome to our store!" },
    { "type": "text", "id": "subheading", "label": "Subheading", "default": "Shop the latest products" },
    { "type": "image_picker", "id": "image", "label": "Hero Image" },
    { "type": "url", "id": "cta_link", "label": "CTA Link" },
    { "type": "text", "id": "cta_label", "label": "CTA Label", "default": "Shop Now" }
  ],
  "presets": [ { "name": "Hero" } ]
}
{% endschema %} 