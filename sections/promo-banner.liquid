{%- comment -%}
Promotional Banner/Pop-up Section
PRD Features:
- Configurable promotional banners or pop-ups for sales, discounts, new arrivals
{%- endcomment -%}

<section class="promo-banner" style="background: {{ section.settings.bg_color }}; color: #222; text-align: center; padding: 1rem 0; font-size: 1.1rem; font-weight: 500;">
  {{ section.settings.text }}
</section>

{% schema %}
{
  "name": "Promo Banner",
  "settings": [
    { "type": "text", "id": "text", "label": "Banner Text", "default": "Free shipping on orders over $50!" },
    { "type": "color", "id": "bg_color", "label": "Background Color", "default": "#fbbf24" }
  ],
  "presets": [ { "name": "Promo Banner" } ]
}
{% endschema %} 